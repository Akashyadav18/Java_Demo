<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="in.sp.beans.Address" id="addId">
		<property name="houseno" value="206"/>
		<property name="city" value="thane"/>
		<property name="pincode" value="41620"/>
	</bean>
	
    <bean class="in.sp.beans.Student" id="stdId">
    	<property name="name" value="Sagar"/>
    	<property name="rollno" value="102"/>
    	<property name="address" ref="addId"/>
    </bean>
    

</beans>